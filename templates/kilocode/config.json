{
  "rulesDirectory": "../.dev/rules",
  "sessionHooks": {
    "start": "../.dev/hooks/session-start.js",
    "end": "../.dev/hooks/session-end.js"
  },
  "autoLoadRules": true,
  "excludePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/lib/**",
    "**/.git/**",
    "**/coverage/**",
    "**/.next/**",
    "**/.nuxt/**"
